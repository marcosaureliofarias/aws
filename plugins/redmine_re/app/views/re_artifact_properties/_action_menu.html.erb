<div class="contextual">
	<%= link_to_if_authorized(t(:button_update),  {
    :controller => 're_artifact_properties',
    :action => 'edit', :id => @re_artifact_properties },
	  :onclick => 'showAndScrollTo("update", "re_artifact_properties_description"); scrollContentPaneTo("update"); return false;',
    :class => 'icon icon-edit button-positive', :accesskey => accesskey(:edit) ) %>
  <%#= watcher_link(@re_artifact_properties, User.current) %>

  <%= link_to(t(:connect_issue), {
    :controller => 'issues',
    :action => 'new',
    :project_id => @project.id,
    :artifacttype => @re_artifact_properties.artifact_type,
    :artifactname => @re_artifact_properties.name,
    :artifactid => @re_artifact_properties.id},
    :class => "icon icon-relation") %>

	<%= link_to_if_authorized(t(:re_artifact_history), {
    controller: 're_artifact_properties',
    action: 'history', :id => @re_artifact_properties },
    class: 'icon icon-timer button-positive') %>

  <% if User.current.allowed_to?(:edit_requirements, @project) %>
    <%= link_to l(:button_delete), "#{re_artifact_properties_path}/#{@re_artifact_properties.id}/how_to_delete", :class => 'icon icon-del', :accesskey => accesskey(:delete) %>
  <% end %>

</div>
