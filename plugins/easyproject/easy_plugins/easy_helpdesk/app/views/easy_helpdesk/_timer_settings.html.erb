    <%= f.label :easy_helpdesk_client_response_status, l(:label_easy_helpdesk_client_response_status), :title => l(:title_easy_helpdesk_client_response_status) %>
    <%= select_tag "#{f.object_name}[easy_helpdesk_client_response_status]",
      options_for_select(IssueStatus.order(:position).map{|u| [u.name, u.id.to_s]}, EasySetting.value('easy_helpdesk_client_response_status')),
      :include_blank => true %>
</p>
<p>
    <%= f.label :easy_helpdesk_sla_stop_states, l(:label_easy_helpdesk_sla_stop_states), :title => l(:title_easy_helpdesk_sla_stop_states) %>
    <%= autocomplete_field_tag(
      "#{f.object_name}[easy_helpdesk_sla_stop_states][]",
      IssueStatus.order(:position).map { |u| [u.name, u.id.to_s] },
      EasySetting.value('easy_helpdesk_sla_stop_states').presence || '0',
      select_first_value: true) %>
</p>
<p>
    <%= f.label :easy_helpdesk_sla_start_states, l(:label_easy_helpdesk_sla_start_states), :title => l(:title_easy_helpdesk_sla_start_states) %>
