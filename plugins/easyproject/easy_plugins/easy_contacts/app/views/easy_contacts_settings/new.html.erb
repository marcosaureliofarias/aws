<h2><%= link_to l(:label_custom_field_plural), :controller => 'easy_contacts_settings', :action => 'index' %>
  &#187; <%= link_to l(@custom_field.type_name), :controller => 'easy_contacts_settings', :action => 'index', :tab => @custom_field.type %>
  &#187; <%= l(:label_custom_field_new) %></h2>

<%= labelled_form_for @custom_field, :url => { :action => "new" } do |f| %>
<%= render :partial => 'custom_fields/form', :locals => { :f => f } %>
<%= hidden_field_tag 'type', @custom_field.type %>
<%= submit_tag l(:button_save) %>
<% end %>
