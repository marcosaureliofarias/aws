<table class="list">
  <tbody>
    <% easy_money_periodical_entity_items.each do |item| %>
      <tr>
        <% if easy_money_periodical_entity.user_defined_items? %>
          <td><%= item.name %></td>
        <% end %>
        <td><%= format_date(item.period_date) %></td>
        <td><%= format_price(item.price1) %></td>
        <% item.visible_custom_field_values.each do |custom_value| %>
          <td><%= show_value(custom_value) %></td>
        <% end %>
        <td class="easy-query-additional-ending-buttons">
          <%= link_to '', edit_easy_money_periodical_entity_easy_money_periodical_entity_item_path(@easy_money_periodical_entity, item), :remote => true, :class => 'icon icon-edit', :title => l(:button_edit) %>
          <%= link_to '', easy_money_periodical_entity_easy_money_periodical_entity_item_path(@easy_money_periodical_entity, item), :class => 'icon icon-del', :method => :delete, :data => {:confirm => l(:text_are_you_sure)}, :title => l(:button_delete) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>