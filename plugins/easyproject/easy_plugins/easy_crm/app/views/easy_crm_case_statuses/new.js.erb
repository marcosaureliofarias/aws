var dig = $("#ajax-modal");
dig.html("<%= j(render(:template => 'easy_crm_case_statuses/new', :formats => [:html])) %>");
dig.find('.buttons').remove();
EASY.modalSelector.showModal('50%');

dig.dialog("option", {
  buttons: [
    {
      text: '<%=j l(:button_cancel) %>',
      click: function() { $(this).dialog('close'); }, 'class': 'button'
    },
    {
      text: '<%=j l(:button_save) %>',
      click: function() { $(this).find('form').trigger('submit.rails'); }, 'class': 'button-positive'
    }
  ]
});

