<%= title l(:heading_easy_crm_case_status_new) %>

<%= form_for(@easy_crm_case_status, :url => easy_crm_case_statuses_path(:project_id => @project), :method => :post, :html => {:id => 'easy_crm_case_status_form', :class => 'tabular form-box'}) do |f| %>
  <%= error_messages_for @easy_crm_case_status %>
  <%= hidden_field_tag('back_url', params[:back_url], :id => nil) unless params[:back_url].blank? %>

  <div class="box">
    <%= render :partial => 'form', :locals => {:f => f, :easy_crm_case_status => @easy_crm_case_status, :project => @project} %>
  </div>

  <p class="buttons form-actions">
    <%= submit_tag l(:button_create), :title => l(:button_create), :class => 'button-positive' %>
    <%= link_to(l(:button_back), params[:back_url] || {:action => 'index'}, :class => 'button') %>
  </p>
<% end %>
