$("#ajax-modal").html("<%=j(render :partial => 'index', :formats => [:html], :locals => {:easy_invoices => @easy_invoices, :project => @project, :easy_crm_case => @easy_crm_case}) %>");
showModal('ajax-modal', '70%');
var submitButton = {
  text:"<%=j l(:button_easy_crm_create_related_invoice) -%>",
  title:"<%=j l(:button_easy_crm_create_related_invoice) -%>",
  click: function() {window.location='<%= j new_project_easy_invoice_path(@project, :easy_crm_case_id => @easy_crm_case) %>';},
  'class': 'button-positive'
 }
var closeButton = {
  text: "<%=j l(:button_close) -%>",
  title: "<%=j l(:button_close) -%>",
  click: function() {$(this).dialog('close');},
  'class': 'button'
}
$("#ajax-modal").dialog('option', {
  buttons: [closeButton, submitButton]
});
