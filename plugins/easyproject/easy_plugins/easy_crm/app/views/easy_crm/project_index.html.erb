<% ### PAGE CUSTOMS ########################################################## %>
<% content_for :easy_page_layout_service_box do -%>
  <%= render :partial => 'easy_crm/sidebar_buttons', :locals => {:project => @project} %>
<% end -%>
<% content_for :easy_page_zone_right_sidebar do -%>
  <%= render :partial => 'sidebar/saved_easyqueries_by_type', :locals => {:query_class => EasyCrmCaseQuery, :project => @project} -%>
  <%= render :partial => 'easy_crm_cases/filters_by_member', :locals => {:project => @project} -%>
<% end -%>
<% content_for :easy_page_layout_service_box_bottom do %>
  <div class="customize-button-container">
    <%= link_to(l(:label_personalize_page), {:action => 'project_layout', :t => params[:t]}, :class => 'customize-button button') if User.current.allowed_to?(:manage_easy_crm_page, @project) %>
  </div>
<% end %>
