<h2>
  <%= link_to l(:label, scope: [:easy_attendance,:activities,:enumerations]), easy_attendance_settings_path %>
  &#187; <%= @easy_attendance_activity.name %>
</h2>

<%= labelled_form_for @easy_attendance_activity, html: { class: 'tabular', id: 'easy_attendance_activity_form' } do |f| %>
  <%= render partial: 'form', locals: { f: f, easy_attendance_activity: @easy_attendance_activity } %>

  <div class="form-actions">
    <%= f.submit l(:button_save), class: 'button-positive' %>
  </div>
<% end %>
