<tr class="easy_query_additional_options">
  <td><%= content_tag :label, l(:label_display) %></td>
  <td>
    <span class="show_sum_row" style="<%= 'display: none;' unless query.display_show_sum_row %>">
      <%= hidden_field_tag((block_name.blank? ? "show_sum_row" : "#{block_name}[show_sum_row]"), '0', id: modul_uniq_id + 'show_sum_row_0') %>
      <% box = check_box_tag((block_name.blank? ? "show_sum_row" : "#{block_name}[show_sum_row]"), '1', query.show_sum_row?, id: modul_uniq_id + 'show_sum_row_1') %>
      <%= label_tag(modul_uniq_id + 'show_sum_row_1', box + l(:field_show_sum_row), class: 'checkbox inline') %>
    </span>

    <span class="load_groups_opened" style="<%= 'display: none;' unless query.display_load_groups_opened && query.grouped? %>">
      <%= hidden_field_tag((block_name.blank? ? 'load_groups_opened' : "#{block_name}[load_groups_opened]"), '0', id: modul_uniq_id + 'load_groups_opened_0') %>
      <% box = check_box_tag((block_name.blank? ? 'load_groups_opened' : "#{block_name}[load_groups_opened]"), '1', query.load_groups_opened?, id: modul_uniq_id + 'load_groups_opened_1') %>
      <%= label_tag(modul_uniq_id + 'load_groups_opened_1', box + l(:field_load_groups_opened), class: 'checkbox inline') %>
    </span>

    <span class="show_avatars" style="<%= 'display: none;' unless query.display_show_avatars? %>">
      <%= hidden_field_tag((block_name.blank? ? 'show_avatars' : "#{block_name}[show_avatars]"), '0', id: modul_uniq_id + 'show_avatars_0') %>
      <% box = check_box_tag((block_name.blank? ? 'show_avatars' : "#{block_name}[show_avatars]"), '1', query.show_avatars?, id: modul_uniq_id + 'show_avatars_1') %>
      <%= label_tag(modul_uniq_id + 'show_avatars_1', box + l(:field_show_avatars), class: 'checkbox inline') %>
    </span>

    <%= call_hook(:view_easy_queries_settings_criteria_bottom, { query: query, block_name: block_name, modul_uniq_id: modul_uniq_id }) %>
  </td>
</tr>
