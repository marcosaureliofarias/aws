<%= content_tag(:h3, l(:label_comment_add), :class => 'title') -%>
<%= form_tag(add_comment_path(@comment.commented_type, @comment.commented_id), :id => 'add_comment_form', :class => 'form-box' , :remote => request.xhr?) do %>
  <%= text_area 'comment', 'comments', :cols => 80, :rows => 15, :class => 'wiki-edit' %>
  <%= wikitoolbar_for 'comment_comments' %>
  <div class="form-actions"><%= submit_tag l(:button_save), :class => 'button-positive' %></div>
<% end %>
