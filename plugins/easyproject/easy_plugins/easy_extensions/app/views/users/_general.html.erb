<%= labelled_form_for :user, @user, url: user_path(@user), html: {method: :put, autocomplete: 'off', multipart: true, class: 'form-box'} do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <div class="form-actions">
    <% if @user.active? && email_delivery_enabled? && @user != User.current -%>
      <label class="inline"><%= check_box_tag 'send_information', 1, true %> <%= l(:label_send_information) %></label><br/>
    <% end -%>
    <%= submit_tag l(:button_save), class: 'button-positive' %></div>
<% end %>
