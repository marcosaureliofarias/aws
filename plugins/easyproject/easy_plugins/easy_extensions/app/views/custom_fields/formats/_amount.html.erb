<p>
  <%= f.text_field(:amount_type) %><br />
  <em><%= l(:text_custom_fiel_amount_attr_amount_type) %></em>
</p>
<p>
  <%= label_tag 'custom_field_settings_precision', l(:field_precision) %>
  <%= select_tag 'custom_field[settings][precision]', options_for_select(custom_field.precisions, custom_field.precision) %>
</p>
<p>
  <%= label_tag 'custom_field_settings_strip_insignificant_zeros', l(:field_strip_insignificant_zeros) %>
  <%= check_box_tag 'custom_field[settings][strip_insignificant_zeros]', '1', custom_field.strip_insignificant_zeros %>
</p>
<p>
  <label for="custom_field_min_length"><%=l(:label_min_max_length)%></label>
  <%= f.number_field :min_length, :size => 5, :no_label => true %> -
  <%= f.number_field :max_length, :size => 5, :no_label => true %>
</p>
<p>
  <%= f.text_field(:default_value) %>
</p>