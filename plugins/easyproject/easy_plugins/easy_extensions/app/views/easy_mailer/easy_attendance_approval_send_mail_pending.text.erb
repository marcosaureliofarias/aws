<% ids = [] %>
<% start_date = nil %>
<% @easy_attendances.each do |key, attendances| %>
    <% start_date ||= attendances.first.arrival %>
    <%= key.to_s %>
    <% ids.concat(attendances.collect(&:id)) %>
  <%= render :partial => 'pending_list', :collection => attendances, :as => 'easy_attendance' %>
<% end %>
<%= approval_easy_attendances_url( :ids => ids ) %>
<%= easy_attendances_url(:start_date => start_date.try(:to_date).to_s) %>