<%= title [l(:label_auth_source_plural), auth_sources_path], @auth_source.name %>

<%= labelled_form_for @auth_source, :as => :auth_source, :url => auth_source_path(@auth_source), :html => {:id => 'auth_source_form', :class => 'form-box'} do |f| %>
  <%= render :partial => auth_source_partial_name(@auth_source), :locals => { :f => f } %>
  <div class="form-actions">
    <%= submit_tag l(:button_save), :class => 'button-positive' %>
  </div>
<% end %>
