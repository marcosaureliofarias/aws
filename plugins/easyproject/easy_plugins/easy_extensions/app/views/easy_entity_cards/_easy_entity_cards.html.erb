<% if display_style == :list %>
  <%= render partial: 'easy_queries/easy_query_entities_list', locals: { query: query, entities: referenced_entities, options: { hascontextmenu: true, disable_sort: true, entity_cards: true, source_entity: source_entity, referenced_collection_name: options[:referenced_collection_name], display_style: display_style } } -%>
<% elsif display_style == :tile %>
  <div class="easy-entity-cards-container">
    <div class="splitcontent">
      <% referenced_entities.each do |referenced_entity| %>
        <%= render_easy_entity_card(referenced_entity, source_entity, options.merge(referenced_entities: referenced_entities)) %>
      <% end %>
    </div>
  </div>
<% end %>
