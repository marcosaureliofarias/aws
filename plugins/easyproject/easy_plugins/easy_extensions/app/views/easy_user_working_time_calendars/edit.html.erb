<div id="easy_user_working_time_calendar_edit">
  <%= title l(:heading_easy_user_working_time_calendar_edit) -%>
  <%= labelled_form_for @easy_user_working_time_calendar, :url => {:action => 'update'}, :html => {:method => :put, :class => 'tabular settings form-box'} do |f| %>
    <%= render :partial => 'form', :locals => { :f => f, :easy_user_working_time_calendar => @easy_user_working_time_calendar } %>
    <div class="form-actions">
      <%= submit_tag l(:button_update), :class => 'button-positive' %>
    </div>
  <% end %>
</div>

<% content_for :easy_page_layout_service_box_primary_actions do -%>
  <%= link_to(l(:button_easy_user_working_time_calendar_show), {:controller => 'easy_user_working_time_calendars', :action => 'show', :id => @easy_user_working_time_calendar}, {:class => 'button', :title => l(:title_easy_user_working_time_calendar_show)}) -%>
  <%= link_to(l(:button_easy_user_working_time_calendar_holidays), {:controller => 'easy_user_time_calendar_holidays', :action => 'index', :calendar_id => @easy_user_working_time_calendar}, :class => 'button', :title => l(:title_easy_user_working_time_calendar_holidays)) -%>
  <%= link_to(l(:button_easy_user_working_time_back_to_calendars), { :controller => 'easy_user_working_time_calendars', :action => 'index'}, :class => 'button', :title => l(:title_easy_user_working_time_back_to_calendars)) -%>
<% end -%>
