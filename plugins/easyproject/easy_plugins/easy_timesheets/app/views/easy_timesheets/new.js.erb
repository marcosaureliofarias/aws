showModal("ajax-modal", '70%');
var modal = $("#ajax-modal");
modal.html("<%=j render(:template => 'easy_timesheets/new', :formats => [:html]) -%>");
modal.find(".form-actions").remove();

var submitButton = {
  text:"<%=j l(:button_create) -%>",
  click: function() {$(this).find('form').submit()},
  'class': 'button-positive'
 }
var closeButton = {
  text: "<%=j l(:button_close) -%>",
  click: function() {$(this).dialog('close');},
  'class': 'button'
}
modal.dialog("option",{title: modal.find('h3').remove().text(), buttons: [closeButton, submitButton]});
initEasyAutocomplete();
