<h2>
  <%= l(:label_easy_knowledge_user_recommend_stories, :user_name => @proposer.name, :required_reading_date => @required_reading_date) -%>
</h2>
<ul>
  <% @stories.each do |story| %>
    <%= content_tag(:li, link_to(story.name, easy_knowledge_story_url(story))) -%>
  <% end %>
</ul>

<% unless @required_reading_date.blank? %>
  <h2>
    <%= l(:label_easy_knowledge_user_recommend_stories_required_reading_date, :user_name => @proposer.name, :required_reading_date => format_date(@required_reading_date)) -%>
  </h2>
<% end %>
