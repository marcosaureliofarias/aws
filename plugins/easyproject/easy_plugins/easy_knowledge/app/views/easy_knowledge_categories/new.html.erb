<h2><%= l(:label_easy_knowledge_new_category) %></h2>
<%= labelled_form_for @category, :url => {:action => 'create'}, :html => {:class => 'form-box'} do |f| %>
  <%= f.hidden_field(:entity_type) %>
  <%= f.hidden_field(:entity_id) %>
  <%= hidden_field_tag :project_id, @project.present? ? @project.id : '' %>
  <%= render :partial => 'form', :locals => {:f => f, :category => @category} %>
  <div class="form-actions">
    <%= submit_tag l(:button_create), :class => 'button-positive' -%>
  </div>
<% end %>

