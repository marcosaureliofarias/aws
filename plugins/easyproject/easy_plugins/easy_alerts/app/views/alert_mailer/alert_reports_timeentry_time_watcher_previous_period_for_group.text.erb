  <% @reports_with_time.each do |report, time, from, to| %>
    *<%= report.entity.name %>* - <%= easy_time_entries_url(:user_id => report.entity.id, :from => from.to_s, :to => to.to_s) %> (<%= easy_format_hours(time, :no_html => true) -%>)
  <% end %>
<% end %>
