<%= issue_fields_rows do |rows| %>
  <% rows.left EasyOauth2Application.human_attribute_name(:app_url), entity.app_url %>
  <% rows.right "", "" %>
  <% rows.left EasyOauth2Application.human_attribute_name(:app_id), entity.app_id %>
  <% rows.left EasyOauth2Application.human_attribute_name(:app_secret), entity.app_secret %>
<% end %>
<hr/>
<%= issue_fields_rows do |rows| %>
  <% rows.left EasyOauth2Application.human_attribute_name(:authorize_url), oauth2_authorize_url %>
  <% rows.left EasyOauth2Application.human_attribute_name(:callback_url), callback_easy_oauth2_application_url(guid: entity.guid) %>
<% end %>
<hr/>
<%= issue_fields_rows do |rows| %>
  <% rows.left EasyOauth2Application.human_attribute_name(:access_token), entity.access_token&.value %>
  <% rows.right(EasyOauth2Application.human_attribute_name(:valid_until), format_time(entity.access_token&.valid_until)) if entity.access_token&.valid_until %>
  <% rows.left EasyOauth2Application.human_attribute_name(:refresh_token), entity.refresh_token&.value %>
<% end %>
<% content_for :easy_page_layout_service_box do %>
  <%= link_to(l(:button_authorize, scope: :easy_oauth2),
              authorization_easy_oauth2_application_path(entity),
              class: 'icon icon-key button-positive',
              title: l(:button_authorize, scope: :easy_oauth2)) %>
<% end %>