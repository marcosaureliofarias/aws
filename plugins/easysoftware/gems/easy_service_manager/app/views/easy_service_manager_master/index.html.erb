<%= title l('easy_service_manager.generate_token') %>

<%= form_tag easy_service_manager_master_generate_path, class: 'tabular' do %>
  <p>
    <%= label_tag 'valid_for', l('easy_service_manager.valid_for') %>
    <%= number_field_tag 'valid_for', 30, min: 0, step: 1 %> <%= l('easy_service_manager.minutes') %>
  </p>

  <p>
    <%= label_tag 'value', l('easy_service_manager.internal_user_limit') %>
    <%= number_field_tag 'value', 0, min: 0, step: 1 %>
  </p>

  <div class="form-actions">
    <%= link_to l(:button_cancel), home_path, class: 'button' %>
    <%= submit_tag l(:button_create), class: 'button-1' %>
  </div>
<% end %>
