initEasyAutocomplete();
$('#ajax-modal').html("<%= j(render(template: 'easy_action_base/new', formats: [:html])) %>");
showModal('ajax-modal', '70%');
$('#ajax-modal').dialog("option", {
    buttons: [
        {
            text: '<%=j l(:button_cancel) %>',
            click: function () {
                $(this).dialog('close');
            }, 'class': 'button'
        },
        {
            text: '<%=j l(:button_create) %>',
            click: function () {
                EASY.utils.submitModalForm(this)
            }, 'class': 'button-positive'
        }
    ]
});
