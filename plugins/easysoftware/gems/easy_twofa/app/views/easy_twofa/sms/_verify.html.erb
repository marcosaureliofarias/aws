<p>
  <label for="verify_code"><%= l('easy_twofa.verify_code') %></label>
  <%= text_field_tag 'verify_code', nil, autocomplete: 'off', autofocus: true %>
</p>

<script>
  EasyGem.schedule.main(function(){
    $("#verify_code").on("keyup", function(event){
      if (this.value) {
        this.value = this.value.replace(/\W/g, '').match(/(.{1,3})/g).join('-')
      }
    })
  })
</script>
