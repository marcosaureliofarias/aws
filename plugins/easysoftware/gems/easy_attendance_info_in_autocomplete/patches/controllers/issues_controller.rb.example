Rys::Patcher.add('IssuesController') do
  # apply_if_plugins :easy_extensions

  included do
    before_action :easy_attendance_info_in_autocomplete_add_flash_notice, only: [:show]
  end

  instance_methods do
    def show
      Rys::Feature.on('easy_attendance_info_in_autocomplete.issue.show') do
        @easy_attendance_info_in_autocomplete_test_1 = 'Test 2'
      end

      super
    end

    private

      def easy_attendance_info_in_autocomplete_add_flash_notice
        if Rys::Feature.active?('easy_attendance_info_in_autocomplete.issue.show', 'easy_attendance_info_in_autocomplete.project.show')
          flash.now[:notice] = 'Features are activated'
        end
      end
  end

  instance_methods(feature: 'easy_attendance_info_in_autocomplete.issue.show') do
    def show
      @easy_attendance_info_in_autocomplete_test_2 = 'Test 2'

      super
    end
  end

  class_methods do
  end
end
